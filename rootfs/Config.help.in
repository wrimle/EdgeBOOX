#
mainmenu "Cirrus Logic Crater Project Help"

menu "Platform Make Commands"
	comment "1.make menuconfig -- menu style platform configuring command"
	comment "2.make config -- text style platform configuring command"
	comment "3.make -- build all packages selected and create images"
	comment "4.make edb9301/9302/9302a/9307/9307a/9312/9315/9315a "
	comment "		use board default configuration for building "
	comment "5.make clean -- clean all built objects"
	comment "6.make distclean -- remove all directories generated by make"
endmenu

menu "Kernel Make Commands"
	comment "1.make linux -- build linux kernel separately"
	comment "2.make ep=9301/9302/9302a/9307/9307a/9312/9315/9315a linux-config"
	comment "      first enter kernel menuconfig to modify kernel configuration then build linux kernel separately"
	comment "3.make linux-clean -- clean kernel built objects"
	comment "4.make linux-dirclean -- remove linux kernel directory"
endmenu

menu "Packages Make Commands"
	comment "each package has associated make target to built it separately"
	comment "Example: make opie -- build package opie"
	comment "Also each package has associated clean and dir clean target "
	comment "Example: make opie-clean -- clean package opie built objects"
	comment "         make opie-dirclean -- remove package opie directory"
endmenu

menu "Filesystem Make Commands"
	comment "1.make ext2root -- create ext2 type ramdisk into images directory"
	comment "2.make jffs2root -- create jffs2 type root fs into images directory"
	comment "3.make cramfsroot -- create cramfs type root fs into images directory"
	comment "4.make ext2root/jffs2root/cramfsroot-clean -- clean the associated targets built objects"
	comment "5.make ext2root/jffs2root/cramfsroot-dirclean -- remove the associated targets directory"
endmenu
