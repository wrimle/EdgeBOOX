PATH="/sbin:/bin:/usr/sbin:/usr/bin"

case "$1" in
    restart)
        $0 stop
        $0 start
        ;;
    start)
        echo "Starting telnet server"
	telnetd
        ;;
    stop)
        echo "Stopping telnet server"
	killall telnetd
        ;;
esac
